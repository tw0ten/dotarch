#!/bin/bash
[[ $- = *i* ]] || return $(true)

PS1=$(
	esc() { echo "\[$1\]"; }
	r=$(esc $normal)
	c=$(esc $cyan)
	b=$(esc $bold$cyan)
	PS1="\u$b@$r\h $b\w="
	[[ $(id -u) = 0 ]] && PS1="\h $b\w#"
	[[ -n "$SSH_CONNECTION" ]] && PS1="ssh$c:$r$PS1"
	PS1="$c\$([[ \$? = 0 ]] && echo + || echo -)$r $PS1"
	echo "$r$PS1$r"
)

mhm() {
	randcow() { cowsay -l | grep "/" -v | tr " " "\n" | shuf -n1; }
	fortune | cowsay -n -f $(randcow) | lolcat
}

mklc() {
	local dir="$DOTFILES/etc/lc"
	cp -i "$dir/$1" LICENSE || { command ls $dir; return $(false); }
	sed -i "0,/{YEAR}/s//$(command date +%Y)/" LICENSE
	sed -i "0,/{NAME}/s//$(git config --get user.name)/" LICENSE
	sed -i "0,/{EMAIL}/s//$(git config --get user.email)/" LICENSE
	head -n 5 LICENSE
}

mktl() {
	mkdir $1 || return
	cd $1
	git init
	mkdir src lib
	mkdir io io/i
	echo "io/o" > .gitignore
	echo "# $1" >> README.md
	echo -e "#!/bin/sh\nrm -rf io/o\nmkdir io/o\n\ncd io\ncd o" > run
	chmod +x run
	ls
}

alias gitc="git clone --depth 1"

alias date="date +'[%w.%d/%m|%H:%M]'"

alias c="xsel --input --clipboard"
alias v="xsel --output --clipboard"

alias ls="ls --color=tty"
alias lsa="ls -A --group-directories-first"

alias vim="nvim"
alias svim="sudo nvim"

alias py="python"

[[ -f ~/.tmprc ]] && . ~/.tmprc

neofetch \
	--ascii_distro arch_small \
	--os_arch off --kernel_shorthand on --shell_version off --package_managers off \
	--disable locale users public_ip local_ip song font battery disk cpu_usage gpu_driver cpu gpu memory uptime resolution wm theme icons term term_font model packages --color_blocks off \
	--underline_char ' ' --separator '\0' --gap 2
