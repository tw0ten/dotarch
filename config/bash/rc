#!/bin/bash
[[ $- != *i* ]] && return

export DOTARCH="$HOME/dotarch"

export normal=$(tput sgr0)
export bold=$(tput bold)
export underline=$(tput smul)
export blink=$(tput blink)
export black=$(tput setaf 0)
export red=$(tput setaf 1)
export green=$(tput setaf 2)
export yellow=$(tput setaf 3)
export blue=$(tput setaf 4)
export magenta=$(tput setaf 5)
export cyan=$(tput setaf 6)
export white=$(tput setaf 7)
export reverse=$(tput rev)

randcol() {
	echo $(echo -e "$black\n$red\n$green\n$yellow\n$blue\n$magenta\n$cyan\n$white" | shuf -n1)
}
randcow() {
	echo $(cowsay -l | grep "/" -v | tr "\n" " " | tr " " "\n" | shuf -n1)
}

export SUDO_PROMPT=`echo -e "$normal[$bold${cyan}sudo$normal] password for $bold$cyan%p$normal #>"`
export PS1="\[$normal\]\u\[$bold$cyan\]@\[$normal\]\h \[$bold$cyan\]\w\[$normal\]\[$bold$cyan\]$\[$normal\]>"
[[ "$(id -u)" -eq 0 ]] && export PS1="\[$normal\]\h \[$bold$cyan\]\w\[$normal\]\[$bold$cyan\]#\[$normal\]>"

export HISTTIMEFORMAT=`echo -e "[%Y|%w.%d/%m|%H:%M:%S] $bold$cyan\\$$normal>"`
export HISTCONTROL=ignoredups
export HISTIGNORE=ls
export HISTFILESIZE=-1
export HISTSIZE=-1

export GIT_EDITOR=nvim

alias fuck='sudo $(history -p \!\!)'
alias kurwa='sudo $(history -p \!\!)'
alias fitta='sudo $(history -p \!\!)'
alias perkele='sudo $(history -p \!\!)'
alias schei√üe='sudo $(history -p \!\!)'
alias ,kznm='sudo $(history -p \!\!)'

alias mhm='echo -e "$(fortune | cowsay -n -f $(randcow))" | lolcat'
alias minineofetch="neofetch --ascii_distro arch_small --disable locale users public_ip local_ip song font battery disk cpu_usage gpu_driver cpu gpu memory uptime resolution wm theme icons term term_font model --underline_char ' ' --color_blocks off --os_arch off --separator ''"
alias FeelsGoodMan="find / | lolcat -i -p 0.1"

alias c="xsel --input --clipboard"
alias v="xsel --output --clipboard"

alias ls="ls --color=auto"
alias lsa="ls -A --color=auto --group-directories-first"

alias vim="nvim"
alias svim="sudo nvim"
alias nano="nvim"

alias py="python"

[[ -f "~/.tmprc" ]] && . "~/.tmprc"

minineofetch
