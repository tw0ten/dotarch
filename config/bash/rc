#!/bin/bash
[[ $- = *i* ]] || return

randcol() {
	tput setaf $(($RANDOM % 8))
}
randcow() {
	cowsay -l | grep "/" -v | tr "\n" " " | tr " " "\n" | shuf -n1
}

PS1="\u\[$bold$cyan\]@\[$normal\]\h \[$bold$cyan\]\w\[$normal\]\[$bold$cyan\]$\[$normal\]>"
[[ "$(id -u)" -eq 0 ]] && PS1="\h \[$bold$cyan\]\w\[$normal\]\[$bold$cyan\]#\[$normal\]>"
[[ "$SSH_CONNECTION" ]] && PS1="ssh:$PS1"
PS1="\[$normal\]\$([[ \$? = 0 ]] && echo + || echo -) $PS1"

alias mhm='echo -e "$(fortune | cowsay -n -f $(randcow))" | lolcat'
alias minineofetch="neofetch --ascii_distro arch_small --disable locale users public_ip local_ip song font battery disk cpu_usage gpu_driver cpu gpu memory uptime resolution wm theme icons term term_font model --underline_char ' ' --color_blocks off --separator ''"
alias FeelsGoodMan="find / | lolcat -i -p 0.1"

alias date="date +'[%w.%d/%m|%H:%M]'"

alias c="xsel --input --clipboard"
alias v="xsel --output --clipboard"

alias ls="ls --color=auto"
alias lsa="ls -A --color=auto --group-directories-first"

alias vim="nvim"
alias svim="sudo nvim"
alias nano="nvim"

alias py="python"

[[ -f "$HOME/.tmprc" ]] && . "$HOME/.tmprc"

minineofetch
